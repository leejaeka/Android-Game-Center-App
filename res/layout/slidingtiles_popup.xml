<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:background="@drawable/pop_bg"
    android:layout_gravity="center">


    <Button
        android:id="@+id/mediumbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/button_style"
        android:onClick="addGrid4ButtonListener"
        android:text="Medium"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/hardbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mediumbtn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/button_style"
        android:onClick="addGrid5ButtonListener"
        android:text="Hard"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/easybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mediumbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-123dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/button_style"
        android:onClick="addGrid3ButtonListener"
        android:text="Easy"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/complexityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="21dp"
        android:text="Choose a complexity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="227dp"
        android:gravity="center"
        android:text="Warning: Creating a new board will permanently erase your existing progress."
        android:textSize="12dp" />
</RelativeLayout>